{% extends 'admin_base.html.twig' %}
{% block title %}
    Změna hesla
{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Změnit heslo</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">Změnit heslo</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <!-- form start -->
                        {{ form_start(form) }}
                        <div class="card-body">
                            <div class="mb-3">
                                {{ form_label(form.plainPassword.first) }}
                                {{ form_widget(form.plainPassword.first) }}
                                {% if form.plainPassword.first.vars.errors %}
                                    {% for error in form.plainPassword.first.vars.errors %}
                                        <div class="invalid-feedback">{{ error.message }}</div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.plainPassword.second) }}
                                {{ form_widget(form.plainPassword.second) }}
                                {% if form.plainPassword.second.vars.errors %}
                                    {% for error in form.plainPassword.second.vars.errors %}
                                        <div class="invalid-feedback">{{ error.message }}</div>
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            {{ form_widget(form.save) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                    <!-- /.card -->

                </div>
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
{% endblock %}
{% block javascripts %}
    {{ parent() }}

{% endblock %}
