{% extends 'security_base.html.twig' %}
{% block title %}
    Žádost o obnovu hesla
{% endblock %}
{% block content %}
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="{{ path('admin_login') }}" class="h1">Administrace</a>
            <p>{{ app_base_name }}</p>
        </div>
        <div class="card-body">

            <p class="login-box-msg">
                Jste pouze jeden krok od nového hesla, obnovte své heslo nyní.
            </p>
            {{ form_start(requestForm) }}
                <div class="mb-3">
                    {{ form_label(requestForm.email) }}
                    <div class="input-group">
                        {{ form_widget(requestForm.email) }}
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary btn-block">Zažádat o změnu hesla</button>
                    </div>
                    <!-- /.col -->
                </div>
            {{ form_end(requestForm) }}

            <p class="mt-3 mb-1 text-center">
                <a href="{{ path('admin_login') }}" title="Přihlásit se">Přihlásit se</a>
            </p>
        </div>
        <!-- /.login-card-body -->
    </div>
{% endblock %}
